<Window x:Class="Frontend.View.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend.View"
        mc:Ignorable="d"
        Title="UserWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <ListBox ItemsSource="{Binding Path=User.Boards}" SelectedItem="{Binding Path=SelectedBoard}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Aqua" BorderThickness="1">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding Path=Id, Mode=OneWay}"/>
                                <TextBlock Text="{Binding Path=Name, Mode=OneWay}" Background="LightBlue"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Content="Enter Board" Click="EnterBoard_Click" IsEnabled="{Binding Path=EnableForward}"/>
            <Button Content="Logout" Click="Logout_Click"/>
        </StackPanel>
    </Grid>
</Window>
